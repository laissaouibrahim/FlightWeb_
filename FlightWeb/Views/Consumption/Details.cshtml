                    @Html.DisplayFor(model => model.TakeoffEffort)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Fuel)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Fuel)
                </dd>
                
            </dl>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ConsumptionId }, new { @class = "btn btn-primary" }) &nbsp;
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-success" })
            </div>
