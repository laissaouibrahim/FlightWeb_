    <div class="panel-body">

        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Flight.FlightName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Flight.FlightName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ConsumPerDistance)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ConsumPerDistance)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ConsumPerTime)
                </dt>

                <dd>
